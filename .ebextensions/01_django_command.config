packages:
  yum:
    python3-devel: []
    mariadb-devel: []

container_commands:
  00_wsgipass:
    command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'
  01_collectstatic:
    command: "source $PYTHONPATH/activate && python manage.py collectstatic --noinput"
  02_dbmigrate:
    command: "source $PYTHONPATH/activate && python manage.py migrate --noinput"
    leader_only: true
